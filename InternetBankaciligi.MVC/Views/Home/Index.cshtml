@using InternetBankaciligi.Entities.API;
@model List<ExchangeRateInfo>;
@using Microsoft.AspNetCore.Mvc.Localization
@using InternetBankaciligi.MVC.Controllers
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<InternetBankaciligi.MVC.Controllers.HomeController> Localizer

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>EHB Bank</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Montserrat:300,400,500,700" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="assets/css/style.css" rel="stylesheet">

</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex justify-content-between">

            <div class="logo">
                <h1><a href="index.html">EHB Bank</a></h1>
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li class="nav-item">
                        @await Html.PartialAsync("_LanguagePartial")
                    </li>
                    <li><a href=@Url.Action("Index", "Home") class="nav-link scrollto active">@Localizer["anasayfa"]</a></li>
                    <li><a href=@Url.Action("Index", "Login") class="btn-get-started scrollto">@Localizer["bankacilik"]</a></li>

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- #header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero" class="clearfix">
        <div class="container" data-aos="fade-up">

            <div class="hero-img" data-aos="zoom-out" data-aos-delay="200">
                <img src="assets/img/hero-img.svg" alt="" class="img-fluid">
            </div>

            <div class="hero-info" data-aos="zoom-in" data-aos-delay="100">
                <h2>@Localizer["Giris"]<br><span />@Localizer["Giris2"]</h2>
                <div>
                    <a href=@Url.Action("Register", "Login") class="btn-get-started scrollto">@Localizer["buton"]</a>
                </div>
            </div>

        </div>
    </section><!-- End Hero Section -->

    <main id="main">

        <!-- ======= About Section ======= -->
        <section id="about">
            <div class="container" data-aos="fade-up">

                <header class="section-header">
                    <h3>@Localizer["Hakkinda"]</h3>
                    <p>
                        @Localizer["Aciklama"]
                    </p>
                </header>
                <br />
                <div class="row">
                    
                    
                </div>
                <br />
                <div class="row about-container">

                    <div class="col-lg-6 content order-lg-1 order-2">
                        <p>

                        </p>

                        <div class="icon-box" data-aos="fade-up" data-aos-delay="100">
                            <div class="icon"><i class="bi bi-card-checklist"></i></div>
                            <h4 class="title"></h4> <br />
                            <p class="description">@Localizer["description"]</p>
                        </div>

                        <div class="icon-box" data-aos="fade-up" data-aos-delay="200">
                            <div class="icon"><i class="bi bi-brightness-high"></i></div>
                            <h4 class="title"></h4><br />
                            <p class="description">@Localizer["description2"]</p>
                        </div>

                        <div class="icon-box" data-aos="fade-up" data-aos-delay="300">
                            <div class="icon"><i class="bi bi-calendar4-week"></i></div>
                            <h4 class="title"></h4><br />
                            <p class="description">@Localizer["description3"]</p>
                        </div>

                    </div>

                    <div class="col-lg-6 background order-lg-2" data-aos="zoom-in">
                        <img src="assets/img/about-img.svg" class="img-fluid" alt="">
                    </div>
                </div>


            </div>

            </div>
        </section><!-- End About Section -->
        <!-- ======= Services Section ======= -->
        <section id="services" class="section-bg">
            <div class="container" data-aos="fade-up">

                <header class="section-header">
                    <h3>@Localizer["piyasa"]</h3>
                </header>

                <div class="row justify-content-center">
                    @foreach (var x in Model)
                    {
                        if (x.Isim == "ABD DOLARI")
                        {
                            <div class="col-md-6 col-lg-5" data-aos="zoom-in" data-aos-delay="100">
                                <div class="box">
                                    <h4 class="title">ABD DOLARI</h4>
                                    <p class="description">@x.ForexBuying</p>
                                </div>
                            </div>
                        }
                        if (x.Isim == "EURO")
                        {
                            <div class="col-md-6 col-lg-5" data-aos="zoom-in" data-aos-delay="100">
                                <div class="box">
                                    <h4 class="title">EURO</h4>
                                    <p class="description">@x.ForexBuying</p>
                                </div>
                            </div>
                        }
                        if (x.Isim == "İNGİLİZ STERLİNİ")
                        {
                            <div class="col-md-6 col-lg-5" data-aos="zoom-in" data-aos-delay="100">
                                <div class="box">
                                    <h4 class="title">İNGİLİZ STERLİNİ</h4>
                                    <p class="description">@x.ForexBuying</p>
                                </div>
                            </div>
                        }
                        if (x.Isim == "İSVİÇRE FRANGI")
                        {
                            <div class="col-md-6 col-lg-5" data-aos="zoom-in" data-aos-delay="100">
                                <div class="box">
                                    <h4 class="title">İSVİÇRE FRANGI</h4>
                                    <p class="description">@x.ForexBuying</p>
                                </div>
                            </div>
                        }
                        if (x.Isim == "JAPON YENİ")
                        {
                            <div class="col-md-6 col-lg-5" data-aos="zoom-in" data-aos-delay="100">
                                <div class="box">
                                    <h4 class="title">JAPON YENİ</h4>
                                    <p class="description">@x.ForexBuying</p>
                                </div>
                            </div>
                        }
                        if (x.Isim == "RUS RUBLESİ")
                        {
                            <div class="col-md-6 col-lg-5" data-aos="zoom-in" data-aos-delay="100">
                                <div class="box">
                                    <h4 class="title">RUS RUBLESİ</h4>
                                    <p class="description">@x.ForexBuying</p>
                                </div>
                            </div>
                        }

                    }
                </div>

            </div>

    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
            </div>
        </div>

        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong>EHB Bank</strong>. All Rights Reserved
            </div>
            <div class="credits">

            </div>
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="assets/vendor/purecounter/purecounter.js"></script>
    <script src="assets/vendor/aos/aos.js"></script>
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="assets/js/main.js"></script>

</body>

</html>