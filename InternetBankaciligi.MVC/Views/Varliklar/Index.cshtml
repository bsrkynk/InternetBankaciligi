    $('#createAccountModal').on('shown.bs.modal',
        function () {
            $('#btnCreateAccount').trigger('focus');
        });
    $('#createTransactionModal').on('shown.bs.modal',
        function () {
            $('#btnCreateTransaction').trigger('focus');
        });

</script>

